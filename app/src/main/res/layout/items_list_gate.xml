<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Tv_gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:text="پرداخت اینترنتی"/>

        <RadioButton
            android:id="@+id/Rb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            />


        <RelativeLayout
            android:layout_below="@+id/Tv_gate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ece9e9">

            <ImageView
                android:id="@+id/Im_gate"
                android:layout_width="40dp"
                android:layout_marginRight="30dp"
                android:layout_height="40dp"
                tools:src="@drawable/ic_send"/>
            <TextView
                android:id="@+id/Tv_name_gate"
                android:layout_toEndOf="@+id/Im_gate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                tools:text="زرین پال"/>


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>