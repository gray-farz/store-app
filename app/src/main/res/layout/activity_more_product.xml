<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:layoutDirection="ltr"
    tools:context=".More_Product.More_Product"
    android:background="@color/backgroud_product_more">


    <ScrollView
        android:id="@+id/Scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/linear_boy_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:id="@+id/linerlayout_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="203dp">
                </LinearLayout>

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@color/backgroud_product_more">
                    <LinearLayout
                        android:id="@+id/lineraction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#f5f5f5">
                        <ImageView
                            android:id="@+id/Im_share"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_share"/>

                        <ImageView
                            android:id="@+id/Addfav"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/ic_favorite_border_black_24dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linertitleshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/lineraction"
                        android:background="#f5f5f5"
                        >

                        <TextView
                            android:id="@+id/Tv_title_product_fa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/iran"
                            android:textSize="13dp"
                            android:layout_margin="5dp"
                            android:layout_marginRight="5dp"
                            android:text="خانه اندروید تست ارسال مطالب"
                            />

                        <TextView
                            android:id="@+id/Tv_title_product_en"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/iran"
                            android:textSize="13dp"
                            android:layout_margin="5dp"
                            android:layout_marginRight="5dp"
                            android:text="computer systsem test"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linertimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/linertitleshow"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textDirection="ltr"
                        android:background="@color/backgroud_product_more">


                        <TextView
                            android:id="@+id/Tv_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/timertextsie"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:textColor="@color/white"
                            tools:text="12"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/shape_timer"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/timertextsie"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:textStyle="bold"
                            android:text=" : "/>

                        <TextView
                            android:id="@+id/Tv_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/timertextsie"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_timer"
                            tools:text="12"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/timertextsie"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:textStyle="bold"
                            android:text=" : "/>

                        <TextView
                            android:id="@+id/Tv_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/timertextsie"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_timer"
                            tools:text="12"/>


                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight=".20"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/image_sh"/>


                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@color/backgroud_product_more">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/backgroud_product_more"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_comments"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".50"
                        android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/Ig_comment"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toEndOf="@+id/Tv_comment"
                                android:src="@drawable/baseline_comment_black_24"/>
                            <TextView
                                android:id="@+id/Tv_comment"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/iran"
                                android:text="نظرات کاربران"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_info"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".50"
                        android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/Ig_product_information"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toEndOf="@+id/Tv_product_information"
                                android:background="@drawable/ic_favorite_border_black_24dp"/>
                            <TextView
                                android:id="@+id/Tv_product_information"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/iran"
                                android:text="مشخصات"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layoutDirection="rtl">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/Tv_color"
                                android:padding="10dp"
                                android:lineSpacingExtra="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/iran"
                                android:text="رنگ"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/Tv_number_color"
                                android:padding="10dp"
                                android:lineSpacingExtra="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/iran"
                                android:layout_alignParentLeft="true"
                                />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_color_more"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/g_icon"/>

                            <TextView
                                android:id="@+id/Tv_g"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:padding="10dp"
                                android:fontFamily="@font/iran"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#c2c1c1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_send"/>

                            <TextView
                                android:id="@+id/Tv_shop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="فروش توسط گروه موبایل آراند | رضایت خرید 80%"
                                android:padding="10dp"
                                android:fontFamily="@font/iran"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/digikala_icon"/>

                            <TextView
                                android:id="@+id/Tv_send"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="بسته بندی و ارسال توسط دیجی کالا"
                                android:padding="10dp"
                                android:fontFamily="@font/iran"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/anbar_icon"/>

                            <TextView
                                android:id="@+id/Tv_anbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="اماده ارسال از انبار دیجی کالا 3 روز اینده"
                                android:padding="10dp"
                                android:fontFamily="@font/iran"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#c2c1c1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layoutDirection="rtl"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/Tv_price_off"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:text="۱۲۰۰۰"
                                android:padding="10dp"
                                android:layout_weight=".50"
                                android:textColor="#C0392B"
                                android:textSize="18dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/iran"/>
                            <TextView
                                android:id="@+id/Tv_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:text="۱۲۰۰۰"
                                android:textAlignment="center"
                                android:padding="10dp"
                                android:textSize="18dp"
                                android:layout_weight=".50"
                                android:textColor="#27AE60"
                                android:fontFamily="@font/iran"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Liner_Cart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#66bb6a"
                            android:layout_margin="10dp"
                            >
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/shop_icon"
                                android:layout_marginTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="افزودن به سبد خرید"
                                android:padding="10dp"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:fontFamily="@font/iran"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#c2c1c1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>

                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:id="@+id/Cardview_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/Im_icon_g"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_send"
                                    />

                                <TextView
                                    android:id="@+id/Tv_number_service_shop"
                                    android:layout_toEndOf="@+id/Im_icon_g"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:fontFamily="@font/iran"
                                    android:textColor="#2ea6f5"
                                    android:layout_toStartOf="@+id/Im_icon_send_test"
                                    android:layout_centerVertical="true"
                                    android:text="۳ فروشنده و گارنتی برای این کالا وجود دارد"/>

                                <ImageView
                                    android:id="@+id/Im_icon_send_test"
                                    android:layout_width="40dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="40dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/baseline_keyboard_arrow_left_black_24"
                                    />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Tv_des"
                            android:padding="10dp"
                            android:lineSpacingExtra="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iran"
                            tools:text="آموزش ساخت اپ دیجی کالا"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#d9d8d8"/>

                        <RelativeLayout
                            android:id="@+id/Rel_more_Text"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/Tv_action"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:padding="10dp"
                                android:fontFamily="@font/iran"
                                android:text="ادامه مطلب"/>


                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layoutDirection="rtl">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Tv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/iran"
                                android:textSize="10dp"
                                android:paddingRight="5dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:id="@+id/Tv_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/iran"
                                android:textSize="10dp"
                                android:paddingRight="3dp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                />

                            <RatingBar
                                android:id="@+id/ra_bar_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:scaleX=".5"
                                android:scaleY=".6"
                                android:rating="4.3"
                                android:layoutDirection="ltr"
                                android:theme="@style/RatingBar"
                                style="@style/Base.Widget.AppCompat.RatingBar.Indicator"

                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="20dp"
                            android:id="@+id/recyclerview_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>




            </LinearLayout>


        </LinearLayout>


    </ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layoutDirection="rtl"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Im_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_product_black_toolbar"
                />

            <TextView
                android:id="@+id/Tv_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/iran"
                android:layout_toEndOf="@+id/Im_back"
                android:layout_toStartOf="@+id/Im_shop"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                tools:text="خانه اندروید تست ارسال مطالب"
                />

            <ImageView
                android:id="@+id/Im_shop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_shop_black_toolbar"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>